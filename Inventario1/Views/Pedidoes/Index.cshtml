@model IEnumerable<Inventario1.Models.Pedido>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @Class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr style="background-color: darkslategray   ;color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proveedor.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado_pedido)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_pedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado_pedido)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_pedido, }, new { @class = "btn btn-warning block" })
                @Html.ActionLink("Detalles", "Details", new { id = item.id_pedido }, new { @class = "btn btn-info block" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_pedido }, new { @class = "btn btn-danger block " })
            </td>
        </tr>
    }

</table>
